<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:ignore="MissingConstraints">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/ribao_feed_image"
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:src="@drawable/ribao"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:riv_corner_radius="5dp" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/ribao_header_icon"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/quwei"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ribao_feed_image" />

    <TextView
        android:id="@+id/ribao_header_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="法国趣味动画，创意胶片风致敬黑白片"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="16sp"
        app:layout_constraintLeft_toRightOf="@id/ribao_header_icon"
        app:layout_constraintTop_toBottomOf="@id/ribao_feed_image" />

    <TextView
        android:id="@+id/ribao_header_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="@dimen/margin_10"
        android:text="开眼动画精选 / #动画"
        android:textSize="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/ribao_header_icon"
        app:layout_constraintTop_toBottomOf="@id/ribao_header_title" />

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginRight="5dp"
        android:src="@drawable/share_image"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ribao_feed_image" />

</androidx.constraintlayout.widget.ConstraintLayout>