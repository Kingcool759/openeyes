<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/home_hot_iv"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:scaleType="centerCrop"
        android:layout_margin="4dp"
        android:background="@drawable/recycler_home_hot_iv_bg"
        android:src="@mipmap/kepu"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/home_hot_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:text="#广告"
        app:layout_constraintTop_toTopOf="@id/home_hot_iv"
        app:layout_constraintBottom_toBottomOf="@id/home_hot_iv"
        app:layout_constraintStart_toStartOf="@+id/home_hot_iv"
        app:layout_constraintEnd_toEndOf="@id/home_hot_iv"
        tools:ignore="MissingConstraints,UnknownId" />
</androidx.constraintlayout.widget.ConstraintLayout>