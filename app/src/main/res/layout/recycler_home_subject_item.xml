<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:ignore="MissingConstraints">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/home_sub_iv"
        android:layout_width="170dp"
        android:layout_height="120dp"
        android:layout_margin="4dp"
        android:background="@drawable/recycler_home_hot_iv_bg"
        android:scaleType="centerCrop"
        android:src="@mipmap/kepu"
        app:riv_corner_radius="5dp" />

    <TextView
        android:id="@+id/home_sub_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="#广告"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@id/home_sub_iv"
        app:layout_constraintEnd_toEndOf="@id/home_sub_iv"
        app:layout_constraintStart_toStartOf="@+id/home_sub_iv"
        app:layout_constraintTop_toTopOf="@id/home_sub_iv"
        tools:ignore="MissingConstraints,UnknownId" />
</androidx.constraintlayout.widget.ConstraintLayout>